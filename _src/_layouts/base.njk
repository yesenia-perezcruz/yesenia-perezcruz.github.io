<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<title>{{ metadata.title }}</title>
		<meta property="og:site_name" content="{{ metadata.title }}">

		<meta name="description" content="{{ metadata.description }}">

		<!-- Twitter Card Stuff: -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:site" content="{{ metadata.author.twitter }}">
		<meta name="twitter:image" content="{{ metadata.url }}{{ metadata.teaser }}">
		<meta property="twitter:image:alt" content="Cover of {{ metadata.byline.title | safe }}, published by A Book Apart, written by {{ metadata.byline.name | safe }}.">
		<meta property="og:site_name" content="{{ metadata.title }}">
		<meta property="og:title" content="{{ metadata.title }}">
		<meta property="og:url" content="{{ page.url }}">
		<meta property="og:description" content="{{ lede }}">
		<meta property="og:image" content="{{ metadata.url }}{{ metadata.teaser }}">
		<meta property="og:image:alt" content="Cover of {{ metadata.byline.title | safe }}, published by A Book Apart, written by {{ metadata.byline.name | safe }}.">
		<meta property="og:type" content="article">
		<meta name="author" content="{{ metadata.author.name }}">

		<link rel="stylesheet" href="/_assets/css/style.css">

		{% if metadata.theme.color %}
		<style type="text/css">
			a {
				color: {{ metadata.theme.color }};
			}
			a:focus {
				outline: 2px dotted rgba(0,0,0,.8);
			}
			.site-foot {
				background: {{ metadata.theme.colordark }};
			}
			.blurbs blockquote + blockquote:before {
				background: {{ metadata.theme.color }};
			}

			.site-foot a {
				text-decoration-color: {{ metadata.theme.color }};
			}
			.cta {
				color: #fff;
				border: 2px solid {{ metadata.theme.color }};
				background: {{ metadata.theme.color }};
				text-shadow: 1px 1px 0 {{ metadata.theme.colordark }};
			}
			.cta:hover,
			.cta:focus {
				border-color: {{ metadata.theme.colordark }};
				background: {{ metadata.theme.color }};
			}
			.site-foot {
				background: {{ metadata.theme.colordark }};
			}
		</style>
		{% endif %}
	</head>
